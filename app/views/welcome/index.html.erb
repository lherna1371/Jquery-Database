<script src="//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" type="text/javascript"></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>

<div data-role="page" id="map-page" data-url="map-page">
    <div data-role="header" data-theme="a">
    	<h1>Activities Map</h1>
    	<a href="#popupNested" data-rel="popup" class="ui-btn ui-corner-all ui-btn-inline ui-icon-check ui-btn-icon-left" data-transition="pop">Filter</a>
    	<a href="/map/list" class="ui-btn ui-corner-all ui-btn-inline ui-icon-bars ui-btn-icon-left" data-transition="flow">List View</a>
		<div data-role="popup" id="popupNested" data-theme="none">
		<form>
		    <fieldset data-role="controlgroup">
		    	<% @categories.each do |c| %>
		        <input type="checkbox" name="<%= c.id%>" id="<%= c.id%>">
		        <label for="<%= c.id%>"><%= c.category_name %></label>
		        <% end %>
		    </fieldset>
		</form>
		</div><!-- /popup -->
    </div>
    <div role="main" class="ui-content" id="map-canvas">
        <!-- map loads here... -->
    </div>
    <div data-role="footer" data-theme="a">
    	<div data-role="navbar">
	    	<ul>
	    		<li><a href="/" class="ui-btn" data-transition="flow">Activities Map</a></li>
	    		<li><a href="/user" class="ui-btn" data-transition="flow">Profile</a></li>
	    		<li><a href="/partner" class="ui-btn" data-transition="flow">Partners</a></li>
	    	</ul>
    	</div>
    </div>
</div>

